{
  "manifest_version": 3,
  "name": "AltSpark (Local)",
  "description": "Audit page copy for accessible text using Chrome on-device AI. No data leaves your browser.",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "storage",
    "sidePanel",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "AltSpark",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "audit-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Run a full page audit"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css",
        "ai.js",
        "offscreen.js",
        "offscreen.html",
        "auditor.js",
        "overlay.js",
        "storage.js",
        "highlighter.js",
        "dom-utils.js",
        "counts.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
